<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext id="spring-logging-context" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:log-endpoint"/>
            <to uri="log:org.wildfly.camel.test.spring" />
        </route>

        <route>
            <from uri="direct:log-dsl" />
            <log message="${body}" logName="org.wildfly.camel.test.spring" />
        </route>
    </camelContext>
</beans>
